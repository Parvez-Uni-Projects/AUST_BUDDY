<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layoutMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <style name="layoutWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layoutWrapContentVertical" parent="layoutWrapContent">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="layoutMatchWrapHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="layoutMatchParentVertical" parent="layoutMatchParent">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="layoutMatchParentHorizontal" parent="layoutMatchParent">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="layoutImageButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:orientation">vertical</item>

        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>


    </style>

    <style name="textViewWrapWrapPoppinsBlack" parent="layoutWrapContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>


    </style>

    <style name="textViewWrapWrapPoppinsBlack18" parent="layoutWrapContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="textViewWrapWrapPoppinsBlackPopup" parent="layoutWrapContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="buttonStyleBasic" parent="textViewWrapWrapPoppinsBlack">

        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/background_color_50</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:linksClickable">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:autoLink">web</item>

    </style>

    <style name="backgroundMain" parent="layoutMatchParent">
        <item name="android:background">@drawable/bk_shape03</item>
    </style>

    <style name="cardViewStyleImageContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/background_color_50</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:linksClickable">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:autoLink">web</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>


    </style>

    <style name="layoutOfCardViewImage" parent="layoutMatchParent">
        <item name="android:background">@color/background_color_50</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="imageViewButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">20dp</item>
        <item name="tint">#000</item>
    </style>

    <style name="buttonStylePage" parent="layoutWrapContent">


        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/background_color_50</item>
        <item name="android:drawableStart">@drawable/ic_baseline_edit_24</item>
        <item name="android:drawableTint">#000</item>
        <item name="android:elevation">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:visibility">visible</item>


    </style>


    <style name="buttonStylePopup">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/cardview_compat_inset_shadow</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/background_color_50</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="buttonStyleCard">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/cardview_compat_inset_shadow</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/background_color_50</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="backgroundPopup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/card_bk</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="backgroundCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">6dp</item>
        <item name="cardBackgroundColor">@color/card_bk</item>
        <item name="cardCornerRadius">8dp</item>


    </style>


    <style name="exampleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/background_color_50</item>

    </style>

    <style name="exampleButtonChild" parent="exampleButton">
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="layoutOnBoardingMain" parent="layoutMatchParentVertical">

        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>

    </style>

    <style name="onBoardingImage">

        <item name="android:layout_width">413dp</item>
        <item name="android:layout_height">382dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:contentDescription">On Boarding Images</item>

    </style>

    <style name="onBoardingButton" parent="buttonStylePage">
        <item name="android:layout_margin">20sp</item>

    </style>

    <style name="materialTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:background">@color/background_color_50</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="materialPasswordInput" parent="materialTextInput">

        <item name="android:hint">@string/type_your_password</item>
        <item name="android:inputType">textPassword</item>

    </style>

    <style name="materialEmailInput" parent="materialTextInput">

        <item name="android:hint">@string/type_your_email</item>
        <item name="android:inputType">textEmailAddress</item>

    </style>


</resources>