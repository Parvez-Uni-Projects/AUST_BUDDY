<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_notice_popup"
    style="@style/backgroundPopup">


    <EditText
        android:id="@+id/QuizNamePop"
        style="@style/normalTextInput"
        android:autofillHints=""
        android:hint="@string/quiz_name"
        android:inputType="text" />

    <LinearLayout
        style="@style/layoutMatchMatch"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TaskDatePop"
            style="@style/textViewWrapWrapPoppinsBlack20"
            android:text="@string/choose_date" />

        <Button
            android:id="@+id/chooseButton"
            style="@style/wrapWrapDarkElevatedButtonWithPadding"
            android:minWidth="@dimen/_50sdp"
            android:width="200dp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:text="@string/choose" />
    </LinearLayout>


    <EditText
        android:id="@+id/TaskDescriptionPop"
        style="@style/normalTextInput"
        android:autofillHints=""
        android:hint="@string/quiz_syllabus"
        android:inputType="textMultiLine" />


    <LinearLayout style="@style/layoutMatchWrapHorizontal">

        <Button
            android:id="@+id/CloseButton"
            style="@style/buttonStyleWrapWrapText"
            android:layout_weight="1"
            android:text="@string/close" />

        <Button
            android:id="@+id/AddButton"
            style="@style/wrapWrapDarkElevatedButtonWithPadding"
            android:layout_weight="1"
            android:text="@string/add" />


    </LinearLayout>


</LinearLayout>

