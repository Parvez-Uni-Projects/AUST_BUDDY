<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_notice_popup"
    style="@style/backgroundPopup">


    <EditText
        android:id="@+id/QuizNamePop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:autofillHints=""
        android:fontFamily="@font/poppins_light"
        android:hint="Quiz Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <LinearLayout
        style="@style/layoutMatchParent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TaskDatePop"
            style="@style/textViewWrapWrapPoppinsBlackPopup"
            android:text="@string/choose_date" />

        <Button

            android:id="@+id/chooseButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_compat_inset_shadow"
            android:layout_weight="1"
            android:background="@color/background_color_50"
            android:focusable="true"
            android:fontFamily="@font/poppins_light"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/choose"

            android:textColor="@color/black" />
    </LinearLayout>


    <EditText
        android:id="@+id/TaskDescriptionPop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:autofillHints=""
        android:fontFamily="@font/poppins_light"
        android:hint="Quiz Syllabus"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />


    <LinearLayout style="@style/layoutMatchWrapHorizontal">

        <Button
            android:id="@+id/CloseButton"
            style="@style/buttonStylePopup"
            android:text="@string/close" />

        <Button
            android:id="@+id/AddButton"
            style="@style/buttonStylePopup"
            android:text="@string/add" />


    </LinearLayout>


</LinearLayout>

