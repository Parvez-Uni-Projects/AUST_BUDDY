<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    style="@style/backgroundMain"
    tools:context=".app.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/layoutMatchMatch">


        <LinearLayout
            style="@style/layoutImageButtonContainer"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout style="@style/layoutMatchWrapHorizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_plaza"
                    style="@style/cardViewStyleImageContainer">


                    <LinearLayout style="@style/layoutOfCardViewImage">

                        <ImageView
                            style="@style/imageViewButton"
                            android:contentDescription="@string/syllabus"
                            android:src="@drawable/ic_baseline_menu_book_24" />

                        <TextView
                            style="@style/textViewWrapWrapPoppinsBlack18"
                            android:text="@string/course" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_routine"
                    style="@style/cardViewStyleImageContainer">


                    <LinearLayout
                        android:id="@+id/routineButton"
                        style="@style/layoutOfCardViewImage">

                        <ImageView
                            style="@style/imageViewButton"
                            android:contentDescription="@string/notice"
                            android:src="@drawable/oj" />

                        <TextView
                            style="@style/textViewWrapWrapPoppinsBlack18"
                            android:text="@string/routine" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout style="@style/layoutMatchWrapHorizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_favourite_teachers"
                    style="@style/cardViewStyleImageContainer">


                    <LinearLayout

                        style="@style/layoutOfCardViewImage">

                        <ImageView
                            style="@style/imageViewButton"
                            android:contentDescription="@string/cgpa"
                            android:src="@drawable/teacher" />

                        <TextView
                            style="@style/textViewWrapWrapPoppinsBlack18"
                            android:text="@string/teachers" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_shortCuts"
                    style="@style/cardViewStyleImageContainer">


                    <LinearLayout

                        style="@style/layoutOfCardViewImage">

                        <ImageView
                            style="@style/imageViewButton"
                            android:contentDescription="@string/buses"
                            android:src="@drawable/favourite_links" />

                        <TextView
                            style="@style/textViewWrapWrapPoppinsBlack18"
                            android:text="@string/short_cut" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout style="@style/layoutMatchWrapHorizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_buses"
                    style="@style/cardViewStyleImageContainer">


                    <LinearLayout

                        style="@style/layoutOfCardViewImage">

                        <ImageView
                            style="@style/imageViewButton"
                            android:contentDescription="@string/buses"
                            android:src="@drawable/bus" />

                        <TextView
                            style="@style/textViewWrapWrapPoppinsBlack18"
                            android:text="@string/buses" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_request"
                    style="@style/cardViewStyleImageContainer">


                    <LinearLayout
                        style="@style/layoutOfCardViewImage">

                        <ImageView
                            style="@style/imageViewButton"
                            android:contentDescription="@string/request"
                            android:src="@drawable/request" />

                        <TextView
                            style="@style/textViewWrapWrapPoppinsBlack18"
                            android:text="@string/request" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>