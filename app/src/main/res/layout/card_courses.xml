<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_bk"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCourseName"
                style="@style/textViewWrapWrapPoppinsBlack"
                android:text="@string/course_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCourseCode"
                style="@style/textViewWrapWrapPoppinsBlack"
                android:text="@string/course_code"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/shareButton"
                    style="@style/buttonStyleBasic"
                    android:text="@string/share" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/exploreButton"
                    style="@style/buttonStyleBasic"
                    android:text="@string/explore" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/courseDeclineButton"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@color/background_color_50"
                android:elevation="10dp"
                android:focusable="true"
                android:fontFamily="@font/poppins_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:linksClickable="true"
                android:text="@string/decline" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/courseApproveButton"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginEnd="10dp"
                android:autoLink="web"
                android:background="@color/background_color_50"
                android:elevation="10dp"
                android:focusable="true"
                android:fontFamily="@font/poppins_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:linksClickable="true"
                android:text="@string/approve" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>