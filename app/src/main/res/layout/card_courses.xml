<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_card_background_announcement"
    style="@style/backgroundCard">

    <TextView
        android:id="@+id/tvCourseName"
        style="@style/textViewWrapWrapPoppinsBlack18"
        android:text="@string/course_name"
        android:textFontWeight="600"
        android:textSize="@dimen/_14sdp"/>

    <TextView
        android:id="@+id/tvCourseCode"
        style="@style/textViewWrapWrapPoppinsBlack18"
        android:text="@string/course_code"
        android:textColor="@color/custom_ash"
        android:textSize="@dimen/_13sdp"
        android:textFontWeight="600"/>

    <LinearLayout style="@style/layoutMatchMatchHorizontal"
        android:layout_gravity="center"
        android:paddingTop="@dimen/_5sdp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButtonToggleGroup
            style="@style/layoutWrapWrap"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/exploreButton"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_90sdp"
                app:iconTint="@color/custom_green_primary"
                app:icon="@drawable/drive" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButtonToggleGroup
            style="@style/layoutWrapWrap"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/shareButton"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/_90sdp"
                app:iconTint="@color/custom_green_primary"
                app:icon="@drawable/share" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <LinearLayout style="@style/layoutMatchMatchHorizontal">

        <Button
            android:id="@+id/courseDeclineButton"
            style="@style/wrapWrapDarkElevatedButtonWithPadding"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/decline" />

        <Button
            android:id="@+id/courseApproveButton"
            style="@style/wrapWrapDarkElevatedButtonWithPadding"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/approve" />

    </LinearLayout>


</LinearLayout>