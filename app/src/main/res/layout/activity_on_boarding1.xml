        <TextView
            android:id="@+id/onboard_1_para"
            style="@style/textViewWrapWrapPoppinsBlack"
            android:padding="20dp"
            android:text="@string/onboard_1_para"
            android:textAlignment="center" />

<!--        <Button-->
<!--            android:id="@+id/onboard_1_button"-->
<!--            style="@style/wrapWrapDarkElevatedButtonWithPadding"-->
<!--            android:text="@string/continue_string" />-->

        <Button
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:backgroundTint="@color/custom_green_dark"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily=""
            >

        </Button>
    </LinearLayout>

</LinearLayout>