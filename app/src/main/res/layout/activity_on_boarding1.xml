<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layoutMatchParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="413dp"
            android:layout_height="382dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/onboard_1_para"
            app:srcCompat="@drawable/onboarding_1" />

        <TextView
            android:id="@+id/on_boarding_1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="30dp"
            android:text="@string/find_your_notes"

            android:textSize="34sp" />

        <TextView
            android:id="@+id/onboard_1_para"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/onboard_1_para"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/onboard_1_button"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_green"
            android:text="@string/next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>