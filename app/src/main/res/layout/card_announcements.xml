<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout style="@style/backgroundCard">

        <LinearLayout
            style="@style/layoutWrapWrapHorizontal"
            android:layout_margin="5dp"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                style="@style/layoutWrapWrapVertical">


                <TextView
                    android:id="@+id/productNameCard"
                    style="@style/textViewWrapWrapPoppinsBlackGravityStart"
                    android:text="@string/announcement_details"
                    android:textFontWeight="600"
                    android:textSize="22sp"
                    android:paddingBottom="2dp"
                    android:fontFamily="@font/open_sans"/>

                <TextView
                    android:id="@+id/productAuthorNameCard"
                    style="@style/textViewWrapWrapPoppinsBlackGravityStart"
                    android:textFontWeight="600"
                    android:textColor="@color/black12"
                    android:alpha="0.5"
                    android:fontFamily="@font/open_sans"
                    android:paddingBottom="2dp"
                    android:text="@string/topic" />


                <TextView
                    android:id="@+id/productCategoryCard"
                    style="@style/textViewWrapWrapPoppinsBlackGravityStart"
                    android:textFontWeight="600"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black12"
                    android:alpha="0.5"
                    android:paddingBottom="2dp"
                    android:text="@string/date">

                </TextView>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout style="@style/layoutMatchMatchHorizontal">

            <Button
                android:id="@+id/callSellerButton"
                style="@style/wrapWrapDarkElevatedButtonWithPadding"
                android:paddingEnd="60sp"
                android:paddingStart="60sp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/call" />

            <Button
                android:id="@+id/showDetailsButton"
                style="@style/wrapWrapDarkElevatedButtonWithPadding"
                android:paddingEnd="50sp"
                android:paddingStart="50sp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:text="@string/details" />
        </LinearLayout>

    </LinearLayout>

</layout>

