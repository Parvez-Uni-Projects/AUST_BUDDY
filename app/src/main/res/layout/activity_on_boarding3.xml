<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layoutMatchMatch">

    <LinearLayout style="@style/layoutOnBoardingMain">

        <ImageView
            style="@style/onBoardingImage"
            app:srcCompat="@drawable/other_onboarding3"
            android:layout_marginBottom="@dimen/_10sdp"
            android:contentDescription="@string/on_boarding_image"/>

        <TextView
            android:id="@+id/onboarding_3_title"
            style="@style/textViewWrapWrapPoppinsBlack"
            android:text="@string/other_features"
            android:textSize="@dimen/_25sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textFontWeight="600"/>

        <TextView
            android:id="@+id/onboarding_3_para"
            style="@style/textViewWrapWrapPoppinsBlack"
            android:paddingBottom="@dimen/_10sdp"
            android:textAlignment="center"
            android:text="@string/more_features" />

        <Button
            android:id="@+id/onboarding_3_button"
            style="@style/wrapWrapDarkElevatedButtonWithPadding"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/get_in" />
    </LinearLayout>

</LinearLayout>