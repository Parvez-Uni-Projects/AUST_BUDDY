<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layoutMatchParent">

    <LinearLayout style="@style/layoutOnBoardingMain">

        <ImageView
            style="@style/onBoardingImage"
            app:srcCompat="@drawable/onboarding_3"
            android:contentDescription="@string/on_boarding_image"/>

        <TextView
            android:id="@+id/onboarding_3_para"
            style="@style/textViewWrapWrapPoppinsBlack"
            android:padding="20dp"
            android:text="@string/more_features" />

        <Button
            android:id="@+id/onboarding_3_button"
            style="@style/onBoardingButton"
            android:text="@string/finish" />
    </LinearLayout>

</LinearLayout>