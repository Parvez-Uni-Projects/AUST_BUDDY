<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundMain"
    android:padding="10sp"
    tools:context=".features.profileTab.adminPanel.AddTeachersFragment">

    <LinearLayout style="@style/layoutMatchMatchVertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:text="@string/request_for_teacher"/>





        <com.google.android.material.textfield.TextInputLayout
            style="@style/materialEmailInput"
            android:hint="@string/name" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teachersName"
                style="@style/layoutMatchWrap"
                android:inputType="textShortMessage"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/materialEmailInput"
            android:hint="@string/designation" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teachersDesignation"
                style="@style/layoutMatchWrap"
                android:inputType="textShortMessage"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/materialEmailInput"
            android:hint="@string/contact_no">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teachersContactNoText"
                style="@style/layoutMatchWrap"
                android:inputType="textShortMessage"/>

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/materialEmailInput"
            android:hint="@string/email" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teachersEmailText"
                style="@style/layoutMatchWrap"
                android:inputType="textShortMessage"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/materialEmailInput"
            android:hint="@string/image_link"  >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teachersImageLinkForm"
                style="@style/layoutMatchWrap"
                android:inputType="textShortMessage"
                android:visibility="gone"
                tools:visibility="gone" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/addTeachersButtonForm"
            style="@style/wrapWrapPrimaryElevatedButtonWithPadding"
            android:layout_width="match_parent"
            android:text="@string/add_teacher"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>