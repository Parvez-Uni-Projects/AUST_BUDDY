                    android:gravity="end"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <Spinner
                    android:id="@+id/c1_grade_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Credits"
