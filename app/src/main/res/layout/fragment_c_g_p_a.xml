<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CGPAFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/semester_pan"
            android:layout_width="398dp"
            android:layout_height="66dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155">

            <Spinner
                android:id="@+id/semester_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:entries="@array/Semesters"
                android:gravity="end"
                android:layerType="hardware" />

            <Button
                android:id="@+id/btn_select"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/primary_green"
                android:text="@string/select"
                android:textColor="@color/text_black" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_result_list"
            android:layout_width="414dp"
            android:layout_height="500dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/semester_pan">

            <LinearLayout
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c1_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <Button
                    android:id="@+id/c1_credit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/credit"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c2_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end" />

                <Button
                    android:id="@+id/c2_credit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/credit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c3_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end" />

                <Button
                    android:id="@+id/c3_credit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/credit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c4_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end" />

                <Button
                    android:id="@+id/c4_credit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/credit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c5_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end" />

                <Button
                    android:id="@+id/c5_credit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/credit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c6_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end" />

                <Button
                    android:id="@+id/c6_credit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/credit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c7_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end" />

                <Button
                    android:id="@+id/c7_credit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/credit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c8_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end" />

                <Button
                    android:id="@+id/c8_credit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/credit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/c9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <Spinner
                    android:id="@+id/c9_result_list"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/Grades"
                    android:gravity="end" />

                <Button
                    android:id="@+id/c9_credit"
                    android:layout_width="0dp"
