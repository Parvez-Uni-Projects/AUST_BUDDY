<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_add_item_for_sell"
    style="@style/backgroundCard"
    tools:context=".features.plazaTab.DialogAddAnnouncement">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@color/custom_green_primary">

    </LinearLayout>

    <TextView
        android:id="@+id/textView_title_admin"
        style="@style/textViewWrapWrapPoppinsBlack20"
        android:padding="20sp"
        android:text="@string/become_an_admin" />


    <LinearLayout
        style="@style/layoutMatchWrapVertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/textView_year"
            style="@style/textViewWrapWrapPoppinsBlack"
            android:layout_gravity="start"
            android:text="@string/select_year" />

        <Spinner
            android:id="@+id/spinner_year"
            style="@style/spinnerModeDropDown" />
    </LinearLayout>

    <LinearLayout
        style="@style/layoutMatchWrapVertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView_semester"
            style="@style/textViewWrapWrapPoppinsBlack"
            android:layout_gravity="start"
            android:text="@string/select_semester" />

        <Spinner
            android:id="@+id/spinner_semester"
            style="@style/spinnerModeDropDown" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_become_admin"
        style="@style/buttonStylePopup"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins_black"
        android:text="@string/become_admin" />


</LinearLayout>

