<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bug_report_popup"
    style="@style/backgroundPopup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_popup_white_rounded_background"
    android:layout_margin="@dimen/_5sdp">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        style="@style/materialEmailInput"
        android:hint="@string/bug_report">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/BugDescriptionPop"
            style="@style/layoutMatchWrap"
            android:minHeight="@dimen/_100sdp"
           />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout style="@style/layoutMatchWrapHorizontal">

        <Button
            android:id="@+id/CloseButton"
            style="@style/buttonStyleWrapWrapText"
            android:layout_weight="6"
            android:paddingStart="30sp"
            android:text="@string/close"

            android:textAlignment="textStart" />

        <Button
            android:id="@+id/sendButton"
            style="@style/buttonStylePopupLeft"
            android:layout_weight="1"

            android:backgroundTint="@color/custom_green_primary"
            android:textColor="@color/white"
            android:text="@string/send" />


    </LinearLayout>


</LinearLayout>

