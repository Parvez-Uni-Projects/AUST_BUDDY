<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bug_report_popup"
    style="@style/backgroundPopup">


    <EditText
        android:id="@+id/BugDescriptionPop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:autofillHints=""
        android:fontFamily="@font/poppins_light"
        android:hint="@string/details_about_the_bug_you_found_thanks"
        android:inputType="textMultiLine"

        android:minHeight="48dp"
        android:textColorHint="@color/black" />


    <LinearLayout style="@style/layoutMatchWrapHorizontal">

        <Button
            android:id="@+id/CloseButton"
            style="@style/buttonStylePopup"
            android:text="@string/close" />

        <Button
            android:id="@+id/sendButton"
            style="@style/buttonStylePopup"
            android:text="@string/send" />


    </LinearLayout>


</LinearLayout>

